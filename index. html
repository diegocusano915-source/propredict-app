<script>
  async function loadTodayMatches() {
    try {
      const response = await fetch("https://propredict-app.onrender.com/api/matches");
      const data = await response.json();
      displayMatches(data.response || []);
    } catch (error) {
      document.getElementById("matches").innerHTML = "Error loading live matches.";
    }
  }

  async function loadLeague(id) {
    try {
      const response = await fetch(`https://propredict-app.onrender.com/api/league/${id}`);
      const data = await response.json();
      displayMatches(data.response || []);
    } catch (error) {
      document.getElementById("matches").innerHTML = "Error loading league matches.";
    }
  }

  function displayMatches(matches) {
    const container = document.getElementById("matches");
    container.innerHTML = "";

    if (!matches || matches.length === 0) {
      container.innerHTML = "No matches found.";
      return;
    }

    matches.forEach(match => {
      container.innerHTML += `
        <div class="match-card">
          <div class="league">
            ${match.league?.name || ""}
          </div>
          <div class="teams">
            ${match.teams?.home?.name || ""} vs ${match.teams?.away?.name || ""}
          </div>
          <div class="status">
            ${match.fixture?.status?.long || ""}
            ${match.fixture?.status?.short !== "NS" && match.fixture?.status?.short !== "FT"
              ? '<span class="live-badge">LIVE</span>'
              : ''}
          </div>
          <div class="score">
            ${match.goals?.home ?? "-"} - ${match.goals?.away ?? "-"}
          </div>
        </div>
      `;
    });
  }

  loadTodayMatches();
</script>

